{{#each erros}}
    <div class="alert alert-danger">{{this.texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="cardy-body p-4">
        <h4>Editar postagem: </h4>
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" id="titulo" class="form-control" minlength="2" required value="{{postagem.titulo}}">
            <br>

            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" class="form-control" minlength="2" required value="{{postagem.slug}}">
            <br>

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" id="descricao" class="form-control" minlength="2" required value="{{postagem.descricao}}">
            <br>

            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" id="conteudo" cols="30" rows="3" class="form-control" minlength="5" required>{{postagem.conteudo}}</textarea>
            <br>
            
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{this._id}}">{{this.nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria cadastrada!</option>
                {{/each}}
            </select>

            <br>
            <button class="btn btn-success mt-3" type="submit">Editar postagem</button>
        </form>
    </div>
</div>